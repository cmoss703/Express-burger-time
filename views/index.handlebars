{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.

* Create a button in `index.handlebars` that will submit the user input into the database. --}}

<div class="container-fluid">
     <img class="burger-img" src="/assets/img/burger-img.png" alt="burger image">
     <h1>It's Burger Time!</h1>
     <div class="row">
          <div class="col m6 s12 burger-div">
               <h3 class="burger-status">READY FOR CONSUMPTION</h3>

               <ul id="ready" class="">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <div class="burgers">
                         <li href="#!" class="burger-text">
                              {{burger_name}}
                              <button class="eat-btn" data-id="{{id}}" data-devoured="{{devoured}}">Eat it!</button>
                         </li>
                    </div>
                    {{/unless}}
                    {{/each}}
               </ul>
          </div>
          <div class="col m6 s12">
               <h3 class="burger-status">DEVOURED</h3>

               <ul id="devoured" class="">
                    {{#each burgers}}
                    {{#if devoured}}
                    <div class="burgers">
                         <li href="#!" class="burger-text">
                              {{burger_name}}
                         </li>
                    </div>

                    {{/if}}
                    {{/each}}
               </ul>
          </div>
     </div>
     <div class="row">
          <div class="col s12 add-burger">
               <h2 class="burger-add">MAKE ANOTHER BURGER</h2>
               <form id="create-form">
                    <div class="row">
                         <div class="col s2"></div>
                         <div class="burgers col s6">
                              <label for="berg">What kind of burger?</label>
                              <input type="text" id="berg" class="white-text" name="burger_name">
                         </div>
                         <button id="add-btn" class="col s1 pull-s2" type="submit">Add Burger</button>
                    </div>
               </form>
          </div>
     </div>
</div>