{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.

* Create a button in `index.handlebars` that will submit the user input into the database. --}}

<div class="container-fluid">
     <img class="burger-img" src="/assets/img/burger-img.png" alt="burger image">
     <h1>It's Burger Time!</h1>
     <div class="row">
          <div class="col m6 s12">
               <h3>Ready for Consumption:</h3>

               <div id="ready" class="">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <div class="burgers">
                         <a href="#!" class="">
                              {{burger_name}}
                         </a>
                         <button class="eat-btn right-align" data-id="{{id}}" data-devoured="{{devoured}}">Eat This
                              Burger!</button>
                    </div>
                    {{/unless}}
                    {{/each}}
               </div>
          </div>
          <div class="col m6 s12">
               <h3>Devoured!</h3>

               <div id="devoured" class="">
                    {{#each burgers}}
                    {{#if devoured}}
                    <a href="#!" class="">
                         {{burger_name}}
                    </a>
                    {{!-- <button class="delete-burger" data-id="{{id}}" data-devoured="{{devoured}}">Delete
                         Burger!</button> --}}
                    {{/if}}
                    {{/each}}
               </div>
          </div>
     </div>
     <div class="row">
          <div class="col s12">
               <h2>Add a Burger</h2>
               <form id="create-form">

                    <div class="form-group">
                         <label for="berg">What kind of burger?:</label>
                         <input type="text" id="berg" name="burger_name">
                    </div>

                    <button id="add-btn" type="submit">Add Burger</button>
               </form>
          </div>
     </div>
</div>